/* clubInfo.wxss */
.club-info {
  padding: 20px;
}
.button-example {
    margin: 32rpx;
    display: flex;
  }
/*button*/  
.btn {  
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #0C1939;  
  color: #fff;  
}  
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.2;  
  overflow: hidden;  
}  
/*content*/  
.drawer_attr_box {  
  border-radius: 5%;
  margin-top: 5rpx;
  width: 100%;  
  overflow: hidden;  
  position: fixed;  
  bottom: 0;  
  left: 0;  
  z-index: 1001;  
  background: #fff;  
}  
.drawer_content {  
  padding: 10rpx 40rpx;  
  height: 500rpx;  
  overflow-y: scroll;  
}  
.drawer_title{  
  padding:20rpx;  
  font:42rpx "microsoft yahei";  
  text-align: center;  
}  
.line{  
  border-bottom: 1px solid #f8f8f8;  
}  

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 5px;
  margin-bottom: 10px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
.signup-button {
  margin-top: 20px; /* Adjust the value as needed */
}

.center-text {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}